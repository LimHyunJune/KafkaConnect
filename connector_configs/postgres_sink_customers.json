{
    "name": "postgres-sink-customers",
    "config": {
        "connector.class":
        "io.confluent.connect.jdbc.JdbcSinkConnector",
        "tasks.max": "1",
        "topics": "dbserver1.om.customers",
        "connection.url": "jdbc:postgresql://postgres_container:5432/postgres",
	"connection.user": "postgres",
	"connection.password": "postgres",
	"auto.create": "true", 
	"insert.mode": "upsert",
	"pk.fields": "customer_id",
	"pk.mode": "record_key",
	"delete.enabled": "true",
        "transforms": "unwrap,key, renameTopic",
        "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",
	"transforms.key.type": "org.apache.kafka.connect.transforms.ExtractField$Key",
	"transforms.key.field": "customer_id",	
	"transforms.renameTopic.type": "org.apache.kafka.connect.transforms.RegexRouter",
	"transforms.renameTopic.regex": "dbserver1.om.customers",
	"transforms.renameTopic.replacement": "stage.customers"

    }
}
