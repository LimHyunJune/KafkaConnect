{
    "name": "postgres-sink-orderitems",
    "config": {
        "connector.class":
        "io.confluent.connect.jdbc.JdbcSinkConnector",
        "tasks.max": "1",
        "topics": "dbserver1.om.order_items",
        "connection.url": "jdbc:postgresql://postgres_container:5432/postgres",
	"connection.user": "postgres",
	"connection.password": "postgres",
	"auto.create": "false", 
	"insert.mode": "upsert",
	"pk.fields": "order_id, line_item_id",
	"pk.mode": "record_key",
	"delete.enabled": "true",
        "transforms": "unwrap, renameTopic",
        "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",
	"transforms.renameTopic.type": "org.apache.kafka.connect.transforms.RegexRouter",
	"transforms.renameTopic.regex": "dbserver1.om.order_items",
	"transforms.renameTopic.replacement": "stage.order_items"

    }
}
